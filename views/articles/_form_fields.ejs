<!-- Piece of HTML Code which will be used in new.ejs as well as in edit section -->

<div class="form-group mb-4">
  <label for="title">Title</label>
   <input autocomplete="off" required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group mb-4">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mb-4">
  <label for="markdown">Mark Down</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-warning">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>